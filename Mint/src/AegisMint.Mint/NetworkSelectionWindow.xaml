<Window x:Class="AegisMint.Mint.NetworkSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Ethereum Network"
        Height="400"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#1e1e1e">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Select Ethereum Network"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Network Options -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center"
                    Margin="20">
            <RadioButton x:Name="LocalhostRadio"
                         Content="Localhost (http://127.0.0.1:8545)"
                         GroupName="Network"
                         FontSize="14"
                         Foreground="White"
                         Margin="0,0,0,15"
                         Padding="5"/>
            
            <RadioButton x:Name="SepoliaRadio"
                         Content="Ethereum Testnet (Sepolia)"
                         GroupName="Network"
                         FontSize="14"
                         Foreground="White"
                         IsChecked="True"
                         Margin="0,0,0,15"
                         Padding="5"/>
            
            <RadioButton x:Name="MainnetRadio"
                         Content="Ethereum Mainnet"
                         GroupName="Network"
                         FontSize="14"
                         Foreground="#ffcc00"
                         FontWeight="Bold"
                         Margin="0,0,0,15"
                         Padding="5"/>
            
            <TextBlock Text="⚠️ Warning: Mainnet uses real ETH"
                       FontSize="12"
                       Foreground="#ffcc00"
                       Margin="25,0,0,0"
                       Visibility="{Binding ElementName=MainnetRadio, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="OnCancelClick"
                    Background="#444"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            
            <Button x:Name="ContinueButton"
                    Content="Continue"
                    Width="100"
                    Height="35"
                    Click="OnContinueClick"
                    Background="#0078d4"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
