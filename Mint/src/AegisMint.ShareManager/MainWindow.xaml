<Window x:Class="AegisMint.ShareManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Aegis Mint - Share Manager"
        Height="980"
        Width="1080"
        Background="#0b1020"
        WindowStartupLocation="CenterScreen"
        MinHeight="960"
        MinWidth="960">
    <Window.Resources>
        <Style x:Key="ButtonBase" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#1f2937" />
            <Setter Property="BorderBrush" Value="#374151" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#334155" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#111827" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#111827" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#1f2937" />
                                <Setter Property="Foreground" Value="#9ca3af" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonPrimary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
            <Setter Property="Background" Value="#2563eb" />
            <Setter Property="BorderBrush" Value="#1d4ed8" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1d4ed8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSuccess" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
            <Setter Property="Background" Value="#16a34a" />
            <Setter Property="BorderBrush" Value="#15803d" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#15803d" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSubtle" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
            <Setter Property="Background" Value="#111827" />
            <Setter Property="BorderBrush" Value="#374151" />
            <Setter Property="Foreground" Value="#e5e7eb" />
        </Style>

        <Style x:Key="ComboBoxDark" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#0b1220" />
            <Setter Property="BorderBrush" Value="#1f2937" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Focusable="False">
                                <Grid>
                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      TextElement.Foreground="{TemplateBinding Foreground}"
                                                      RecognizesAccessKey="True" />
                                    <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="White"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0" />
                                </Grid>
                            </ToggleButton>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Background="#0b1220"
                                        BorderBrush="#1f2937"
                                        BorderThickness="1"
                                        CornerRadius="2">
                                    <ScrollViewer Margin="0"
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#9ca3af" />
                                <Setter TargetName="ToggleButton" Property="Background" Value="#111827" />
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#374151" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleButton" Property="Background" Value="#111827" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#0b1220" />
            <Setter Property="Padding" Value="6,4" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#1f2937" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1f2937" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Share Manager"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White" />
            <TextBlock Text="Recover the treasury mnemonic or reconfigure the share set."
                       Margin="0,6,0,0"
                       Foreground="#9ca3af"
                       FontSize="13" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,14,0,12">
            <Button x:Name="BrowseButton"
                    Content="Load share files..."
                    Height="32"
                    MinWidth="140"
                    Margin="0,0,8,0"
                    Padding="14,6"
                    Click="OnBrowseClick"
                    Style="{StaticResource ButtonBase}" />
            <Button x:Name="ClearButton"
                    Content="Clear"
                    Height="32"
                    MinWidth="80"
                    Margin="0,0,8,0"
                    Padding="12,6"
                    Click="OnClearClick"
                    Style="{StaticResource ButtonSubtle}" />
            <Button x:Name="RecoverButton"
                    Content="Recover mnemonic"
                    Height="32"
                    MinWidth="140"
                    Padding="16,6"
                    Click="OnRecoverClick"
                    IsEnabled="False"
                    Style="{StaticResource ButtonPrimary}" />
            <TextBlock x:Name="ThresholdText"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       Foreground="#cbd5e1"
                       FontSize="13" />
        </StackPanel>

        <Border Grid.Row="2"
                Background="#0f172a"
                BorderBrush="#1f2937"
                BorderThickness="1"
                CornerRadius="8"
                Padding="8">
            <ListView x:Name="SharesList"
                      Background="#0f172a"
                      Foreground="#e5e7eb"
                      BorderThickness="0"
                      Margin="0"
                      SelectionMode="Extended">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" DisplayMemberBinding="{Binding ShareId}" Width="40" />
                        <GridViewColumn Header="File" DisplayMemberBinding="{Binding FileName}" Width="160" />
                        <GridViewColumn Header="Network" DisplayMemberBinding="{Binding Network}" Width="100" />
                        <GridViewColumn Header="Created (local)" DisplayMemberBinding="{Binding CreatedAtLocal}" Width="150" />
                        <GridViewColumn Header="Shares" DisplayMemberBinding="{Binding SharesDisplay}" Width="110" />
                        <GridViewColumn Header="Path" DisplayMemberBinding="{Binding Path}" Width="360" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Border Grid.Row="3"
                Background="#0f172a"
                BorderBrush="#1f2937"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,12,0,12">
            <StackPanel>
                <TextBlock Text="Reconfigure Shares"
                           FontWeight="SemiBold"
                           Foreground="#e5e7eb"
                           FontSize="14" />
                <TextBlock Text="Generate a new share set and replace the backend assignments."
                           Margin="0,6,0,0"
                           Foreground="#9ca3af"
                           FontSize="12" />

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Token Name"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="TokenNameBox"
                             Width="220"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <TextBlock Text="Token Address"
                               Width="120"
                               Margin="16,0,0,0"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="TokenAddressBox"
                             Width="360"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Treasury Address"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="TreasuryAddressBox"
                             Width="360"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <TextBlock Text="Network"
                               Width="120"
                               Margin="16,0,0,0"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <ComboBox x:Name="NetworkBox"
                              Height="28"
                              Width="140"
                              BorderThickness="1"
                              Padding="6,4"
                              VerticalContentAlignment="Center"
                              Style="{StaticResource ComboBoxDark}">
                        <ComboBoxItem Content="Sepolia" Tag="sepolia" IsSelected="True" />
                        <ComboBoxItem Content="Mainnet" Tag="mainnet" />
                        <ComboBoxItem Content="Localhost" Tag="localhost" />
                    </ComboBox>
                    <Button x:Name="LookupTokenButton"
                            Content="Lookup by treasury"
                            Height="28"
                            MinWidth="140"
                            Margin="8,0,0,0"
                            Padding="10,4"
                            Click="OnLookupTokenByTreasuryClick"
                            Style="{StaticResource ButtonBase}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Deployment ID"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="DeploymentIdBox"
                             Width="420"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <Button x:Name="LookupDeploymentButton"
                            Content="Lookup by address"
                            Height="28"
                            MinWidth="140"
                            Margin="8,0,0,0"
                            Padding="10,4"
                            Click="OnLookupDeploymentClick"
                            Style="{StaticResource ButtonBase}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="New Total"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="NewTotalSharesBox"
                             Width="100"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <TextBlock Text="New Threshold"
                               Width="120"
                               Margin="16,0,0,0"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="NewThresholdBox"
                             Width="100"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Output Folder"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="OutputFolderBox"
                             Width="540"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <Button x:Name="BrowseOutputButton"
                            Content="Browse"
                            Height="28"
                            MinWidth="80"
                            Margin="8,0,0,0"
                            Padding="10,4"
                            Click="OnBrowseOutputClick"
                            Style="{StaticResource ButtonBase}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button x:Name="ReconfigureButton"
                            Content="Generate &amp; Upload New Shares"
                            Height="34"
                            MinWidth="220"
                            Padding="16,6"
                            Click="OnReconfigureClick"
                            Style="{StaticResource ButtonSuccess}" />
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="ProgressIndicator"
                                   Text="●"
                                   FontSize="16"
                                   Foreground="#3b82f6"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Visibility="Collapsed">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="SpinnerTransform" CenterX="8" CenterY="8" />
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard x:Name="SpinnerStoryboard">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SpinnerTransform"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0"
                                                           To="360"
                                                           Duration="0:0:1"
                                                           RepeatBehavior="Forever" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock x:Name="OperationStatusText"
                                   Foreground="#94a3b8"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="4"
                Background="#0f172a"
                BorderBrush="#1f2937"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,12,0,12"
                x:Name="LogViewerBorder"
                MaxHeight="120"
                Visibility="Visible">
            <StackPanel>
                <DockPanel Margin="0,0,0,8">
                    <TextBlock Text="Operation Log"
                               FontWeight="SemiBold"
                               Foreground="#e5e7eb"
                               FontSize="13"
                               DockPanel.Dock="Left" />
                    <Button Content="Copy"
                            Height="24"
                            MinWidth="60"
                            Padding="8,4"
                            Margin="0,0,8,0"
                            DockPanel.Dock="Right"
                            Click="OnCopyLog"
                            Style="{StaticResource ButtonSubtle}" />
                    <Button Content="Clear"
                            Height="24"
                            MinWidth="60"
                            Padding="8,4"
                            DockPanel.Dock="Right"
                            Click="OnClearLog"
                            Style="{StaticResource ButtonSubtle}" />
                </DockPanel>
                <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LogTextBlock"
                               Foreground="#cbd5e1"
                               FontSize="11"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"
                               Background="#0b1220"
                               Padding="8" />
                </ScrollViewer>
            </StackPanel>
        </Border>

        <Grid Grid.Row="5" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#0f172a"
                    BorderBrush="#1f2937"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="Recovered mnemonic"
                                   FontWeight="SemiBold"
                                   Foreground="#e5e7eb"
                                   FontSize="14"
                                   DockPanel.Dock="Left" />
                        <Button Content="Copy"
                                DockPanel.Dock="Right"
                                Height="28"
                                MinWidth="70"
                                Padding="10,4"
                                Margin="8,0,0,0"
                                Click="OnCopyMnemonic"
                                Style="{StaticResource ButtonBase}" />
                    </DockPanel>
                    <TextBox x:Name="RecoveredMnemonicBox"
                             Margin="0,8,0,0"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             MinHeight="72" />
                    <TextBlock x:Name="MnemonicValidationText"
                               Margin="0,6,0,0"
                               Foreground="#a5f3fc"
                               FontSize="12" />
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Margin="12,0,0,0"
                    Background="#0f172a"
                    BorderBrush="#1f2937"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12">
                <StackPanel>
                    <TextBlock Text="Derived checks"
                               FontWeight="SemiBold"
                               Foreground="#e5e7eb"
                               FontSize="14" />
                    <TextBlock Text="Primary (m/44'/60'/0'/0/0)"
                               Margin="0,8,0,2"
                               Foreground="#cbd5e1"
                               FontSize="12" />
                    <TextBlock x:Name="PrimaryAddressText"
                               Text="–"
                               Foreground="White"
                               FontSize="13"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Secondary (m/44'/60'/0'/0/1)"
                               Margin="0,10,0,2"
                               Foreground="#cbd5e1"
                               FontSize="12" />
                    <TextBlock x:Name="SecondaryAddressText"
                               Text="–"
                               Foreground="White"
                               FontSize="13"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="6"
                Background="#0f172a"
                BorderBrush="#1f2937"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10">
            <TextBlock x:Name="StatusText"
                       Text="Ready."
                       Foreground="#cbd5e1"
                       FontSize="12" />
        </Border>
    </Grid>
</Window>
