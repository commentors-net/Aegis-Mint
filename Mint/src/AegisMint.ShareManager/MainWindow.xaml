<Window x:Class="AegisMint.ShareManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Aegis Mint - Share Manager"
        Height="720"
        Width="1080"
        Background="#0b1020"
        WindowStartupLocation="CenterScreen"
        MinHeight="640"
        MinWidth="960">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Share Manager"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White" />
            <TextBlock Text="Recover the treasury mnemonic or reconfigure the share set."
                       Margin="0,6,0,0"
                       Foreground="#9ca3af"
                       FontSize="13" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,14,0,12">
            <Button x:Name="BrowseButton"
                    Content="Load share files..."
                    Margin="0,0,8,0"
                    Padding="14,8"
                    Click="OnBrowseClick"
                    Background="#1f2937"
                    Foreground="White"
                    BorderBrush="#374151" />
            <Button x:Name="ClearButton"
                    Content="Clear"
                    Margin="0,0,8,0"
                    Padding="12,8"
                    Click="OnClearClick"
                    Background="#111827"
                    Foreground="#e5e7eb"
                    BorderBrush="#374151" />
            <Button x:Name="RecoverButton"
                    Content="Recover mnemonic"
                    Padding="16,8"
                    Click="OnRecoverClick"
                    IsEnabled="False"
                    Background="#2563eb"
                    Foreground="White"
                    BorderBrush="#1d4ed8" />
            <TextBlock x:Name="ThresholdText"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       Foreground="#cbd5e1"
                       FontSize="13" />
        </StackPanel>

        <Border Grid.Row="2"
                Background="#0f172a"
                BorderBrush="#1f2937"
                BorderThickness="1"
                CornerRadius="8"
                Padding="8">
            <ListView x:Name="SharesList"
                      Background="#0f172a"
                      Foreground="#e5e7eb"
                      BorderThickness="0"
                      Margin="0"
                      SelectionMode="Extended">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" DisplayMemberBinding="{Binding ShareId}" Width="40" />
                        <GridViewColumn Header="File" DisplayMemberBinding="{Binding FileName}" Width="160" />
                        <GridViewColumn Header="Network" DisplayMemberBinding="{Binding Network}" Width="100" />
                        <GridViewColumn Header="Created (local)" DisplayMemberBinding="{Binding CreatedAtLocal}" Width="150" />
                        <GridViewColumn Header="Shares" DisplayMemberBinding="{Binding SharesDisplay}" Width="110" />
                        <GridViewColumn Header="Path" DisplayMemberBinding="{Binding Path}" Width="360" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Border Grid.Row="3"
                Background="#0f172a"
                BorderBrush="#1f2937"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,12,0,12">
            <StackPanel>
                <TextBlock Text="Reconfigure Shares"
                           FontWeight="SemiBold"
                           Foreground="#e5e7eb"
                           FontSize="14" />
                <TextBlock Text="Generate a new share set and replace the backend assignments."
                           Margin="0,6,0,0"
                           Foreground="#9ca3af"
                           FontSize="12" />

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Token Name"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="TokenNameBox"
                             Width="220"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <TextBlock Text="Token Address"
                               Width="120"
                               Margin="16,0,0,0"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="TokenAddressBox"
                             Width="360"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Deployment ID"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="DeploymentIdBox"
                             Width="420"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <Button x:Name="LookupDeploymentButton"
                            Content="Lookup by address"
                            Margin="8,0,0,0"
                            Padding="10,6"
                            Click="OnLookupDeploymentClick"
                            Background="#1f2937"
                            Foreground="#e5e7eb"
                            BorderBrush="#374151" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="New Total"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="NewTotalSharesBox"
                             Width="100"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <TextBlock Text="New Threshold"
                               Width="120"
                               Margin="16,0,0,0"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="NewThresholdBox"
                             Width="100"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Output Folder"
                               Width="120"
                               Foreground="#cbd5e1"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="OutputFolderBox"
                             Width="540"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="6" />
                    <Button x:Name="BrowseOutputButton"
                            Content="Browse"
                            Margin="8,0,0,0"
                            Padding="10,6"
                            Click="OnBrowseOutputClick"
                            Background="#1f2937"
                            Foreground="#e5e7eb"
                            BorderBrush="#374151" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button x:Name="ReconfigureButton"
                            Content="Generate &amp; Upload New Shares"
                            Padding="16,8"
                            Click="OnReconfigureClick"
                            Background="#16a34a"
                            Foreground="White"
                            BorderBrush="#15803d" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="4" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#0f172a"
                    BorderBrush="#1f2937"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="Recovered mnemonic"
                                   FontWeight="SemiBold"
                                   Foreground="#e5e7eb"
                                   FontSize="14"
                                   DockPanel.Dock="Left" />
                        <Button Content="Copy"
                                DockPanel.Dock="Right"
                                Padding="10,4"
                                Margin="8,0,0,0"
                                Click="OnCopyMnemonic"
                                Background="#1f2937"
                                Foreground="#e5e7eb"
                                BorderBrush="#374151" />
                    </DockPanel>
                    <TextBox x:Name="RecoveredMnemonicBox"
                             Margin="0,8,0,0"
                             Background="#0b1220"
                             Foreground="White"
                             BorderBrush="#1f2937"
                             BorderThickness="1"
                             Padding="10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             MinHeight="72" />
                    <TextBlock x:Name="MnemonicValidationText"
                               Margin="0,6,0,0"
                               Foreground="#a5f3fc"
                               FontSize="12" />
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Margin="12,0,0,0"
                    Background="#0f172a"
                    BorderBrush="#1f2937"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12">
                <StackPanel>
                    <TextBlock Text="Derived checks"
                               FontWeight="SemiBold"
                               Foreground="#e5e7eb"
                               FontSize="14" />
                    <TextBlock Text="Primary (m/44'/60'/0'/0/0)"
                               Margin="0,8,0,2"
                               Foreground="#cbd5e1"
                               FontSize="12" />
                    <TextBlock x:Name="PrimaryAddressText"
                               Text="–"
                               Foreground="White"
                               FontSize="13"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Secondary (m/44'/60'/0'/0/1)"
                               Margin="0,10,0,2"
                               Foreground="#cbd5e1"
                               FontSize="12" />
                    <TextBlock x:Name="SecondaryAddressText"
                               Text="–"
                               Foreground="White"
                               FontSize="13"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="5"
                Background="#0f172a"
                BorderBrush="#1f2937"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10">
            <TextBlock x:Name="StatusText"
                       Text="Ready."
                       Foreground="#cbd5e1"
                       FontSize="12" />
        </Border>
    </Grid>
</Window>
