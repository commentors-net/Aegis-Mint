<Window x:Class="AegisMint.MintControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Aegis Token Control"
        Height="980"
        Width="1240"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#070b10">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="6" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="#0f1724" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Width" Value="44" />
            <Setter Property="Height" Value="32" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="4,0,0,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#122032" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1d2a3c" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <Border Background="#070b10"
                Grid.Row="0"
                Padding="16,12"
                MouseLeftButtonDown="OnTitleBarMouseDown">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               TextTrimming="CharacterEllipsis" />
                    <TextBlock Text="Key-governed token control"
                               Foreground="#9ca3af"
                               FontSize="12"
                               Margin="0,2,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Style="{StaticResource TitleBarButton}" Content="-" Click="OnMinimizeClick" />
                    <Button Style="{StaticResource TitleBarButton}" Content="?" Click="OnMaximizeClick" />
                    <Button Style="{StaticResource TitleBarButton}" Content="X" Background="#C53030" Click="OnCloseClick" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Border Background="#020617" />

            <wv2:WebView2 x:Name="MainWebView"
                          NavigationStarting="OnNavigationStarting"
                          NavigationCompleted="OnNavigationCompleted"
                          CoreWebView2InitializationCompleted="OnWebViewInitialized"
                          DefaultBackgroundColor="#00000000" />

            <StackPanel x:Name="Overlay"
                        Background="#CC020617"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="Visible"
                        Orientation="Vertical">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,120,0,0">
                    <TextBlock Text="Aegis Token Control"
                               Foreground="White"
                               FontSize="26"
                               FontWeight="Bold"
                               TextAlignment="Center" />
                    <TextBlock x:Name="OverlayStatus"
                               Text="Loading UI..."
                               Foreground="#9ca3af"
                               FontSize="14"
                               Margin="0,8,0,0"
                               TextAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
