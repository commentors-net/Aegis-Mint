<Window x:Class="AegisMint.AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AegisMint Admin"
        Height="500"
        Width="720"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="BaseAddressText"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Text="Service: https://localhost:5050"/>

        <!-- Genesis Key Setup Section -->
        <GroupBox Grid.Row="1" Header="Genesis Key Setup" Margin="0,12,0,0" Padding="8">
            <StackPanel>
                <TextBlock Text="Enter 12-word mnemonic phrase (BIP39):" Margin="0,0,0,4"/>
                <TextBox x:Name="MnemonicInput" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="False"
                         Height="50"
                         Margin="0,0,0,4"
                         ToolTip="Enter your 12-word recovery phrase separated by spaces"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <Button Content="Set Genesis Key" 
                            Click="OnSetMnemonic" 
                            Padding="12,6" 
                            Margin="0,0,8,0"
                            ToolTip="Store the genesis key and generate Shamir shares"/>
                    <Button Content="Delete Genesis Key" 
                            Click="OnDeleteMnemonic" 
                            Padding="12,6" 
                            Background="#FFD32F2F"
                            Foreground="White"
                            ToolTip="Delete the existing genesis key and shares"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <WrapPanel Grid.Row="2" Margin="0,12,0,12">
            <Button Content="Check Status" Click="OnCheckStatus" Margin="0,0,8,8" Padding="12,6"/>
            <Button Content="Ping" Click="OnPing" Margin="0,0,8,8" Padding="12,6"/>
            <Button Content="Device Info" Click="OnDeviceInfo" Margin="0,0,8,8" Padding="12,6"/>
            <Button Content="Unlock (dev)" Click="OnDevUnlock" Margin="0,0,8,8" Padding="12,6"/>
            <Button Content="Lock" Click="OnLock" Margin="0,0,8,8" Padding="12,6"/>
            <Button Content="Get Mnemonic" Click="OnGetMnemonic" Margin="0,0,8,8" Padding="12,6"/>
            <Button Content="Refresh Logs" Click="OnRefreshLogs" Margin="0,0,8,8" Padding="12,6"/>
        </WrapPanel>

        <TextBlock Grid.Row="4"
                   Margin="0,0,0,4"
                   Text="Activity"
                   FontWeight="SemiBold"/>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="OutputBox"
                     Grid.Column="0"
                     FontFamily="Consolas"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     BorderBrush="#FF2D2D30"
                     BorderThickness="1"/>

            <TextBox x:Name="LogsBox"
                     Grid.Column="1"
                     Margin="10,0,0,0"
                     FontFamily="Consolas"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     BorderBrush="#FF2D2D30"
                     BorderThickness="1"
                     ToolTip="Latest service log lines (read-only)"/>
        </Grid>
    </Grid>
</Window>
